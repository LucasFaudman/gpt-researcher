{
  "AGENT": "default",
  "EMBEDDING": "openai:text-embedding-3-large",
  "FAST_LLM": "openai:gpt-3.5-turbo-16k",
  "SMART_LLM": "openai:gpt-4-turbo",
  "STRATEGIC_LLM": "openai:gpt-4-turbo",
  "REPORT_TYPE": "research_report",
  "RETRIEVERS": "mcp,tavily",
  "CURATE_SOURCES": true,
  
  "MCP_SERVERS": [
    {
      "name": "github",
      "description": "GitHub code search and repository management",
      "connection_type": "stdio",
      "server_command": "npx",
      "server_args": "-y @modelcontextprotocol/server-github",
      "env_vars": {
        "GITHUB_TOKEN": "your_github_token_here"
      },
      "tools": [
        {
          "name": "searchCode",
          "description": "Search for code in GitHub repositories"
        },
        {
          "name": "searchRepos",
          "description": "Search for GitHub repositories"
        }
      ]
    },
    {
      "name": "tavily-search",
      "description": "Tavily Search for web content",
      "connection_type": "stdio",
      "server_command": "npx",
      "server_args": "-y tavily-mcp",
      "env_vars": {
        "TAVILY_API_KEY": "your_tavily_api_key_here"
      },
      "tools": [
        {
          "name": "search",
          "description": "Search the web using Tavily Search"
        }
      ]
    },
    {
      "name": "cloud-mcp",
      "description": "Remote MCP server via WebSocket",
      "connection_type": "websocket",
      "connection_url": "wss://your-remote-mcp.example.com/ws",
      "connection_token": "your_auth_token",
      "tools": [
        {
          "name": "customSearch",
          "description": "Perform a specialized search using the remote MCP"
        }
      ]
    }
  ],
  
  "MCP_DEFAULT_SERVER": "tavily-search",
  "MCP_ALLOWED_ROOT_PATHS": ["/home/user/data", "/tmp/mcp-data"]
} 